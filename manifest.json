{
    "manifest_version": 3,
    "name": "DocuEase",
    "version": "1.0",
    "description": "Summarize and generate charts from web pages using AI.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "icons/icon.jpeg"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  